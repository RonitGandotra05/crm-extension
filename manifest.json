{
  "manifest_version": 3,
  "name": "crm-remarks",
  "description": "Upload media and remarks to the CRM system.",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Upload Media",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
